			# add starborn ruins blockers
			# like regular ones, except they don't give you any pops when cleared as all the pops are dead.  
			add_deposit = d_starborn_ruins
			add_deposit = d_starborn_wasteland
			add_deposit = d_starborn_ruins
			add_deposit = d_starborn_wasteland	
			add_deposit = d_starborn_ruins
			add_deposit = d_starborn_wasteland
